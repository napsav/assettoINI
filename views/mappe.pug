doctype html
head
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(charset='UTF-8')
  title ResetFocus - Mappe
  link(rel='stylesheet', type='text/css', href='/rfstyle.css')
  link(rel='preconnect', href='https://fonts.gstatic.com')
  link(href='https://fonts.googleapis.com/css2?family=Fira+Sans&display=swap', rel='stylesheet')
  link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.15.1/css/all.css', integrity='sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp', crossorigin='anonymous')
.sidenav
  img.logo(src='/assets/logo_transparent.png')
  a(href='/index.html') Home
  a(href='/download.html') Centro download
  a(href='/manager') AC Web Manager
  a(href='/info.html') Info e link utili
  a(href='/gara.html') Campionato GT3 AC
  a(href="/manager/logout") Logout
#main.main
  h1 Gestione mappa - Assetto Corsa
  #rigaPrincipale.row
    #correnti.column
      .card
        .card-header
          h2 Mappa attuale
          a(class="aggiungi" href="/manager/export") Esporta file
        .mappaCorrente
          .descrizioneMappa
            p Tracciato: #{mappa}
            p Configurazione tracciato: #{configMappa}
        
    #gestione.column
      .card
        .card-header
          h2 Modifica mappa
        form(method='post' action='/manager/mappe/cambia')
          #mappaScelta.select
            input(name='mappaScelta' style='display: none;' type='text' autocomplete='off')
            .select-label Seleziona
            .opzioni.hide
              input.search(type='text' placeholder='Ricerca' autocomplete='off')
              .lista-opzioni
                .opzione-disabilitata Caricamento in corso...
          input.aggiungi(type='submit' value='Modifica')
script(src='/mappeData.js')